<!DOCTYPE html>
<html>
  <head>
    <title>Foosballer</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
  </head>

  <body id="page-top" class="index">
    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header page-scroll">
          <a href='<%= root_url %>' class="navbar-brand">
            <%= image_tag 'logo.png', size: '45x45', class: 'logo-image' %>
            <span class='logo-text'>Foosballer</span>
          </a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <li class="page-scroll">
              <a href="#login">Login</a>
            </li>
            <li class="page-scroll">
              <a href="#about">About</a>
            </li>
            <li class="page-scroll">
              <a href="#contact">Contact</a>
            </li>
          </ul>
        </div>
        <!-- /.navbar-collapse -->
      </div>
      <!-- /.container-fluid -->
    </nav>
    <!-- Navigation -->

    <!-- Main Content -->
    <section>
      <%= yield %>
    </section>
    <!-- Main Content -->

    <!-- Footer -->
    <footer class='text-center hidden'>
      <div class='footer-below'>
        <div class='container'>
          <div class='row'>
            <div class='col-lg-12'>
              Copyright &copy; <%= Date.today.year %> - Nitin Misra
            </div>
          </div>
        </div>
      </div>
    </footer>
    <!-- Footer -->

  </body>
</html>
